{
  "name": "tailwind",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/tailwind/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/tailwind"
      }
    },
    "publish": {
      "dependsOn": ["build"],
      "command": "node tools/scripts/publish.mjs tailwind {args.ver} {args.tag}"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/tailwind"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/tailwind/**/*.ts",
          "libs/tailwind/package.json"
        ]
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "buildTarget": "tailwind:build",
        "outputPath": "dist/libs/tailwind",
        "github": true,
        "changelog": true,
        "npm": true,
        "tagFormat": "tailwind-v${VERSION}"
      }
    }
  },
  "tags": ["type:config", "scope:tailwind"]
}
